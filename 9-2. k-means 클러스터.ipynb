    "#practice. k-means로 MNIST 손글씨 숫자 군집화\n",
    "import numpy as np\n",
    "import cv2\n",
    "import matplotlib.pyplot as plt\n",
    "import mnist          #위 모듈을 mnist.py 의 별도의 python 파일로 저장한 후 불러오는 경우라면 import 할 것.\n",
    "\n",
    "#공통 모듈로부터 MNIST 전체 이미지 데이터 읽기 -- ①\n",
    "data, _ = getData()"
    "#data, _ = mnist.getData()    #mnist.py라는 별도의 모듈이 있을 경우 이 코드를 사용.\n",
    "\n",
    "#중지 요건\n",
    "criteria = (cv2.TERM_CRITERIA_EPS + cv2.TERM_CRITERIA_MAX_ITER, 10, 1.0)\n",
    "\n",
    "#평균 클러스터링 적용, 10개의 그룹으로 군집화 -- ②\n",
    "ret, label, center = cv2.kmeans(data, 10, None, criteria, 10, cv2.KMEANS_RANDOM_CENTERS)\n",
    "\n",
    "#중앙점 이미지 출력\n",
    "for i in range(10):\n",
    "    #군집화 후 각 군집의 중앙점을 다시 20*20 크기의 이미지로 만들어 출력 -- ③\n",
    "    cent_img = center[i].reshape(20, 20).astype(np.uint8)\n",
    "    plt.subplot(2, 5, i+1)\n",
    "    plt.imshow(cent_img, 'gray')\n",
    "    plt.xticks([]); plt.yticks([])\n",
    "plt.show()"
   ]
