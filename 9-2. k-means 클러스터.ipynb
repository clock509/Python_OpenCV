    "#practice. 16컬러 군집화\n",
    "import numpy as np\n",
    "import cv2\n",
    "\n",
    "K = 16 #군집 개수(16컬러) --- ①\n",
    "img = cv2.imread('../img/taekwonv1.jpg')\n",
    "\n",
    "#군집화를 위한 데이터 구조와 형식 변환 --- ②\n",
    "data = img.reshape((-1, 3)).astype(np.float32)\n",
    "\n",
    "#반복 중지 요건 --- ③\n",
    "criteria = (cv2.TERM_CRITERIA_EPS + cv2.TERM_CRITERIA_MAX_ITER, 10, 1.0)\n",
    "\n",
    "#평균 클러스터링 적용 --- ④\n",
    "ret, label, center = cv2.kmeans(data, K, None, criteria, 10, cv2.KMEANS_RANDOM_CENTERS)\n",
    "\n",
    "#중심값을 정수형으로 변환 --- ⑤\n",
    "center = np.uint8(center) #각 평균 중심값은 소수점 이하를 갖기 때문에, 색상값으로 사용하기 위해서는 반드시 정수로 형변환 해야 함.\n",
    "print(center)\n",
    "\n",
    "#각 레이블에 해당하는 중심값으로 픽셀값 선택 --- ⑥\n",
    "res = center[label.flatten()]\n",
    "\n",
    "#원본 영상의 형태로 변환 --- ⑦\n",
    "res = res.reshape((img.shape))\n",
    "\n",
    "#결과 출력 --- ⑧\n",
    "merged = np.hstack((img, res))\n",
    "cv2.imshow('KMEans Color', merged)  #16가지 색상만으로 원본의 색상을 표현하므로 다소 거칠지만, 비슷하게 표현되었음.\n",
    "cv2.waitKey(0)\n",
    "cv2.destroyAllWindows()"
   ]
